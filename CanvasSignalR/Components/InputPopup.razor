@inject NavigationManager Navigation

<div class="popup-background" 
style="position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.5);display:flex;justify-content:center;align-items:center;">
    <div class="popup-content" style="background:white;padding:20px;border-radius:8px;min-width:300px;">
        <h3>Enter canvas name</h3>
        <input @bind="UserInput" placeholder="Enter name" style="width:100%;padding:8px;" />
        <button @onclick="Close">Close</button>
        <button @onclick="Create">Create</button>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnClose { get; set; }
    public string UserInput { get; set; } = string.Empty;

    private async Task Close()
    {
        await OnClose.InvokeAsync(null);
    }

    private async Task Create()
    {
        await OnClose.InvokeAsync(null);
        Navigation.NavigateTo($"/canvas/{UserInput}");
    }
}
